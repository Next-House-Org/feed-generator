# Server Configuration
FEEDGEN_PORT=3000
FEEDGEN_LISTENHOST="0.0.0.0"
FEEDGEN_HOSTNAME=feed.nexthouse.org

# Database Configuration - Using volume mapped to /data
FEEDGEN_SQLITE_LOCATION="/data/feedgen.db"

# Bluesky Network Settings
FEEDGEN_PDS_URL=http://localhost:2583
FEEDGEN_APPVIEW_URL=http://localhost:61749

# Required for feed publishing
# Replace with your actual publisher DID
# Get it from: https://bsky.social/xrpc/com.atproto.identity.resolveHandle?handle=YOUR_HANDLE
FEEDGEN_PUBLISHER_DID="did:plc:YOUR_DID_HERE"

# Optional: Set to your service DID if different from did:web
# FEEDGEN_SERVICE_DID="did:plc:..."

# Connection settings
FEEDGEN_SUBSCRIPTION_RECONNECT_DELAY=3000